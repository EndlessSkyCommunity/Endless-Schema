{
	"$id": "https://example.com/endless_schemas/player_condition",
	"type": "object",
	"properties": {
		"condition": { "$ref": "#/definitions/condition" },
		"comparison": { "$ref": "#/definitions/comparison" },
		"value_or_expr": { "$ref": "#/definitions/value_or_expr" }
	},
    "additionalProperties": false,
    "minProperties": 1,
	"definitions": {
		"condition": { "type": "string" },
		"comparison": { "enum": ["==", "!=", "<", ">", "<=", ">="] },
		"value#": { "type": "string" },
		"value_expression": {
			"type": "string",
			"pattern": "^([^+*-\/\n]+[*+-\/])+[^+*-\/\n]+ *$"
		},
		"value_or_expr": {
			"anyOf": [
				{ "$ref": "#/definitions/value#" }, 
				{ "$ref": "#/definitions/value_expression" }
			]
		},
		"has": { "$ref": "#/definitions/condition" },
		"not": { "$ref": "#/definitions/condition" }
	}
}